{
  "manifest_version": 3,
  "name": "AI Video Translator",
  "version": "2.0.0",
  "description": "Translate videos from YouTube, Netflix, Prime Video, and more to multiple languages using AI. Features caching and selective time ranges.",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.netflix.com/*",
    "https://www.amazon.com/*",
    "https://www.primevideo.com/*",
    "https://www.twitch.tv/*",
    "https://vimeo.com/*",
    "http://localhost:5000/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://www.netflix.com/*",
        "https://www.amazon.com/*",
        "https://www.primevideo.com/*",
        "https://www.twitch.tv/*",
        "https://vimeo.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
